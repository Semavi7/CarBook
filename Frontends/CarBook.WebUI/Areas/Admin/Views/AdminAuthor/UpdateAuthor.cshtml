@model UpdateAuthorDto
@{
    ViewData["Title"] = "UpdateAuthor";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
	<div class="container-fluid">

		<div class="row">
			<div class="col-xl-12">
				<div class="card">
					<div class="card-body">
						<h4 class="card-title">Yazar Bilgisi Güncelleme Sayfası</h4>
						<p class="card-subtitle mb-4">Yazar alanına güncellemek istediğiniz veri girişini aşağıdaki panelden yapabilirsiniz.</p>
						<form method="post">
							<input type="hidden" asp-for="AuthorID" />
							<div class="form-group">
								<label for="exampleInputName">Ad Soyad</label>
								<input type="text" class="form-control" id="exampleInputName" asp-for="Name" placeholder="Yazar Ad ve Soyadını Giriniz">
							</div>
							<div class="form-group">
								<label for="exampleInputDescription">Açıklama</label>
								<textarea rows="5" class="form-control" asp-for="Description" placeholder="Açıklamayı Giriniz"></textarea>
							</div>
							<div class="form-group">
								<label for="exampleInputImageUrl">Video Açıklama</label>
								<input type="text" class="form-control" id="exampleInputImageUrl" asp-for="ImageUrl" placeholder="Yazar Görsel URL Bilgisini Giriniz">
							</div>
							<button type="submit" class="btn btn-primary waves-effect waves-light">Yazarı Kaydet</button>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

