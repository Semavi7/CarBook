@model CreateCarPricingDto
@{
    ViewData["Title"] = "CreateCarPricing";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
	<div class="container-fluid">

		<div class="row">
			<div class="col-xl-12">
				<div class="card">
					<div class="card-body">
						<h4 class="card-title">Yeni Araç Girişi</h4>
						<p class="card-subtitle mb-4">Araç ile ilgili temel bilgileri eksiksiz doldurmanız önemlidir. Veri girişlerinden sonra kaydet butonuna tıklayarak işlemi tamamlayabilirsiniz.</p>
						<form method="post">
							<input type="hidden" value="@ViewBag.Id" asp-for="CarID" />
							<div class="form-group">
								<label for="exampleInputBrand">Fiyat Türü</label>
								@Html.DropDownListFor(x => x.PricingID, (List<SelectListItem>)ViewBag.BrandValues, new { @class = "form-control" })
							</div>
							<div class="form-group">
								<label for="exampleInputModel">Fiyat</label>
								<input type="text" class="form-control" id="exampleInputModel" asp-for="Amount" placeholder="Fiyat Girişi Yapınız">
							</div>
							<button type="submit" class="btn btn-primary waves-effect waves-light">Fiyatı Kaydet</button>
						</form>

					</div> <!-- end card-body-->
				</div> <!-- end card-->

			</div>
		</div>
	</div>
</div>

